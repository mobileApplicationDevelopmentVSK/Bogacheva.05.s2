<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/email_"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/onboard_1">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        app:srcCompat="@drawable/back" />


    <TextView
        android:id="@+id/codofemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="314dp"
        android:layout_marginTop="344dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="4sp"
        android:text="@string/codofemail"
        android:textAppearance="@style/codofemail"
        android:translationY="-1.86sp" />

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codofemail"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="278dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etcode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/codofemail"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/etcode2"
            android:background="@drawable/etcod"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/etcode2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/codofemail"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/etcode3"
            android:background="@drawable/etcod"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/etcode3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/codofemail"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/etcode4"
            android:background="@drawable/etcod"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/etcode4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/codofemail"
            android:layout_marginTop="24dp"
            android:background="@drawable/etcod"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="206dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="@string/time"
        android:textAppearance="@style/time"
        android:translationY="-1.05sp" />


</RelativeLayout>